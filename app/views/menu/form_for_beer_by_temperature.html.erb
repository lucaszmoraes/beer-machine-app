
<div class="card" style="width: 36rem;">
  <div class="card-body">
    <h5 class="card-title">Melhor cerveja por temperatura</h5>
    <h6 class="card-subtitle mb-2 text-muted">Encontre a melhor cerveja para a sua temperatura preferida</h6>

    <b>Action Name:</b> <%= action_name %>

    <%= form_with(url: menu_resultado_cerveja_por_temperatura_path, method: 'post', local: true) do |form| %>


          <div class="form-group">
            <%= label_tag :temperature, 'Entre com uma temperatura'%>
            <%= text_field_tag :temperature, nil, placeholder: 'Ex.: -10', class: 'form-control' %>
          </div>

          <%= button_tag 'Calcular', class: 'btn btn-success btn-block' %>


    <% end %>



  </div>
</div>